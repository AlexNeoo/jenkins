node {
    def app

    stage('Clone repository') {
        /* Let's make sure we have the repository cloned to our workspace */
        checkout scm
    }

    stage('Build custom ngnix image') {
        /* This builds image from Dockerfile with welcome.html start page*/
        app = docker.build("ngnix-welcome")
    }

    stage('Test image') {
        /* Run ngnix image */
        docker.image('ngnix-welcome:latest').withRun('-p 80:80 --rm') { c ->
        /* Run curl test */
        sh 'curl 172.17.0.1'
        sh 'echo $?'
        sh 'exit 1'
        }             
    }
}
